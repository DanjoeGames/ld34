{
  "name": "ld34",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "mkdir -p build",
    "clean": "rm -r build",
    "build": "browserify src/index.js -o build/bundle.js -t [ babelify --presets [ es2015 ] ] -d",
    "watch": "watchify src/index.js -o build/bundle.js -t [ babelify --presets [ es2015 ] ] -d -v",
    "serve": "browser-sync start --server build --files 'build/*' --reload-delay 100",
    "start": "npm run watch & npm run serve",
    "postinstall": "npm run setup && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanjoeGames/ld34.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DanjoeGames/ld34/issues"
  },
  "homepage": "https://github.com/DanjoeGames/ld34#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-sync": "^2.10.0",
    "browserify": "^12.0.1",
    "watchify": "^3.6.1"
  }
}
